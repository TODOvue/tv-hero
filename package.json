{
  "name": "@todovue/tv-hero",
  "private": false,
  "author": "Cristhian Daza",
  "description": "A customizable hero component for TODOvue, featuring responsive design, multiple layout options, and call-to-action support.",
  "license": "MIT",
  "version": "1.1.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/TODOvue/tv-hero.git"
  },
  "bugs": {
    "url": "https://github.com/TODOvue/tv-hero/issues"
  },
  "keywords": [
    "todovue",
    "front-end",
    "web",
    "vue",
    "vuejs",
    "vue-js",
    "hero",
    "show-hero",
    "vue-hero",
    "vue-hero-component"
  ],
  "exports": {
    ".": {
      "import": "./dist/tv-hero.es.js",
      "require": "./dist/tv-hero.cjs.js"
    },
    "./style.css": "./dist/tv-hero.css",
    "./nuxt": "./nuxt.js"
  },
  "main": "dist/tv-hero.cjs.js",
  "module": "dist/tv-hero.es.js",
  "types": "dist/tv-hero.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "nuxt.js"
  ],
  "sideEffects": [
    "*.css",
    "*.scss",
    "dist/*.css"
  ],
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:demo": "cp README.md public/ && cp CHANGELOG.md public/ && VITE_BUILD_TARGET=demo vite build"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@todovue/tv-demo": "^1.2.1",
    "@vitejs/plugin-vue": "^6.0.0",
    "sass": "^1.0.0",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "dependencies": {
    "@todovue/tv-button": "^1.2.2"
  }
}
